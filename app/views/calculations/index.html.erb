<p id="notice"><%= notice %></p>

<h1>Calculations</h1>

<table>
  <thead>
    <tr>
      <th>First input</th>
      <th>Second input</th>
      <th>Operation</th>
      <th>Result</th>
      <th>Requested count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calculations.each do |calculation| %>
      <tr>
        <td><%= calculation.first_input %></td>
        <td><%= calculation.second_input %></td>
        <td><%= calculation.operation %></td>
        <td><%= calculation.result %></td>
        <td><%= calculation.requested_count %></td>
        <td><%= link_to 'Show', calculation %></td>
        <td><%= link_to 'Edit', edit_calculation_path(calculation) %></td>
        <td><%= link_to 'Destroy', calculation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

