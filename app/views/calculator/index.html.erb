<h1>Ruby_Calculator_Simulator</h1>

<%= form_with(model: calculator_url) do |tab| %>
  <%= tab.text_field :first_input, class:"form-control" %>
  <%= tab.text_field :operation, class:"form-control" %>
  <%= tab.text_field :second_input, class:"form-control" %>
<% end %>

